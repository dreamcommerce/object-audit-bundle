<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="dream_commerce_object_audit.resource_manager.class">DreamCommerce\Bundle\ObjectAuditBundle\Manager\ORMResourceAuditManager</parameter>
    </parameters>

    <services>
        <service id="dream_commerce_object_audit.configuration" class="%dream_commerce_object_audit.configuration.class%">
            <argument>%dream_commerce.model.revision.class%</argument>
        </service>

        <service id="dream_commerce_object_audit.manager" class="%dream_commerce_object_audit.manager.class%">
            <argument type="service" id="dream_commerce_object_audit.configuration" />
            <argument type="service" id="dream_commerce.factory.revision" />
            <argument type="service" id="dream_commerce.factory.object_audit" />
            <argument type="service" id="dream_commerce.repository.revision" />
            <argument type="expression">service(container.hasParameter('dream_commerce_object_audit.persist_manager.service') ? parameter('dream_commerce_object_audit.persist_manager.service') : 'doctrine.orm.default_entity_manager')</argument>
            <argument type="expression">service(container.hasParameter('dream_commerce_object_audit.persist_audit_manager.service') ? parameter('dream_commerce_object_audit.persist_audit_manager.service') : 'doctrine.orm.default_entity_manager')</argument>
        </service>

        <service id="dream_commerce.factory.object_audit" class="%dream_commerce_object_audit.object_audit_factory.class%" />

        <service id="dream_commerce_object_audit.resource_manager" class="%dream_commerce_object_audit.resource_manager.class%">
            <argument type="service" id="dream_commerce_object_audit.manager" />
            <argument type="service" id="dream_commerce_object_audit.resource_configuration" />
            <argument type="service" id="sylius.resource_registry" />
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>