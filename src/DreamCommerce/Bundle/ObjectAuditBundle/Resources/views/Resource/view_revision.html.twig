{% extends "DreamCommerceObjectAuditBundle::layout.html.twig" %}

{% block dream_commerce_object_audit_content %}
    <h1>{{ 'Resources changed in revision %revision%'|trans({'%revision%': revision.id}) }}</h1>

    <p><a href="{{ path('dream_commerce_object_audit_home') }}">{{ 'Home'|trans }}</a></p>

    <table>
        <thead>
            <tr>
                <th>{{ 'Resource Name'|trans }}</th>
                <th>{{ 'Identifiers'|trans }}</th>
                <th>{{ 'Revision Type'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for changedResource in changedResources %}
                <tr>
                    <td><a href="{{ path('dream_commerce_object_audit_view_resource', { 'revisionId': revision.id, 'resourceName': changedResource.resourceName, 'resourceId': changedResource.object.id }) }}">{{ changedResource.resourceName }}</a></td>
                    <td>{{ changedResource.object.id }}</td>
                    <td>{{ changedResource.type }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock dream_commerce_object_audit_content %}